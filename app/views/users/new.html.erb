<div class="new_user">
  <h1 class="header--name">New User</h1>
  <div class="form">
    <%= form_with model: @user do |form| %>
    <div class="form--div">
      <div class="label--div">
        <%= form.label :name %><br>
      </div>
      <div class="input--div">
        <%= form.text_field :name %>
      </div>
      <% @user.errors.full_messages_for(:name).each do |message| %>
      <div class="error--message">
        <%= message %>
      </div>
      <% end %>
    </div>

    <div class="form--div">
      <div class="label--div">
        <%= form.label :age %><br>
      </div>
      <div class="input--div">
        <%= form.number_field :age %>
      </div>
      <% @user.errors.full_messages_for(:age).each do |message| %>
      <div class="error--message">
        <%= message %>
      </div>
      <% end %>
    </div>

    <div class="form--div">
      <div class="label--div">
        <%= form.label :bio %><br>
      </div>
      <div class="input--div__bio">
        <%= form.text_field :bio %>
      </div>
      <% @user.errors.full_messages_for(:bio).each do |message| %>
      <div class="error--message">
        <%= message %>
      </div>
      <% end %>
    </div>

    <div class="button--links">
      <div class="button">
        <%= form.submit %>
      </div>
    <% end %>

      <div class="button">
        <%= link_to 'All Users', users_path(@users) %>
      </div>
    </div>
  </div>
</div>
